=render 'shared/page_title', title: 'Login'

.container#form
  .well.col-md-6
    =form_tag '/login', method: :post do
      .form-group
        =label_tag :email
        =email_field_tag :email, nil, class: 'form-control'

      .form-group
        =label_tag :password
        =password_field_tag :password, nil, class: 'form-control'

      =submit_tag "Login", class: 'btn btn-primary'
